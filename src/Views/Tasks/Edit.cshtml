@model TodoApp.Models.EditModel

@{
    ViewBag.Title = Model.IsAdding ? "Create New Task" : "Edit Task: " + @Model.Description;
}

<div class="page-header" id="banner">
	<div class="row">
		<div class="col-lg-8 col-md-7 col-sm-6">
			<h1>@ViewBag.Title</h1>
			<p class="lead">The hitchhiker's guide to azure</p>
		</div>
	</div>
</div>

<form asp-controller="Tasks" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <fieldset>
        <div class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="CategoryId"
                            asp-items="Model.CategoryOptions"
                            class="form-control"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary" role="button">Cancel</a>
                </div>
            </div>
            <input asp-for="Id" value="@Model.Id" type="hidden" />
        </div>
    </fieldset>
</form>